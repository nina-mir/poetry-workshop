---
interface ScheduleEvent {
  start: string;
  end: string;
  title: string;
  notes?: string;
}

interface Props {
  day: string;
  date: string;
  events: ScheduleEvent[];
  class?: string;
}

const { day, date, events, class: className = "" } = Astro.props;
---

<section
  class={`px-2 py-6 md:w-[50%] w-full flex flex-col gap-4 bg-white/70 md:bg-gray-500/20 text-[1.8rem]  ${className}`}
>
  <!-- Header -->
  <header class="flex flex-col gap-1 ">
    <h2 class="text-2xl sm:text-2xl font-serif tracking-tight">
      {day}
    </h2>
    <p class="text-lg  uppercase tracking-[0.2em] text-slate-600">
      {date}
    </p>
  </header>

  <div class="h-px bg-purple-200"></div>

  <!-- Schedule list -->
  <ul class="flex flex-col gap-4 text-wrap">
    {events.map((event) => (
      <li class="grid grid-cols-[auto,1fr] gap-x-4 gap-y-1 sm:gap-x-6">
        <!-- Time -->
        <div class="text-[1rem] sm:text-sm font-mono text-slate-700 whitespace-nowrap">
          <span>{event.start}</span>
          <span class="mx-1">â€“</span>
          <span>{event.end}</span>
        </div>

        <!-- Content -->
        <div class="flex flex-col">
          <p class="text-[1rem] sm:text-base font-semibold text-slate-900">
            {event.title}
          </p>
          {event.notes && (
            <p class="text-xs sm:text-sm text-slate-600">
              {event.notes}
            </p>
          )}
        </div>
      </li>
    ))}
  </ul>
</section>
